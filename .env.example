# ==============================================================================
# Clinical Metabolomics Oracle - Environment Configuration Example
# ==============================================================================
# This file contains example values for all environment variables used in the
# Clinical Metabolomics Oracle with LightRAG integration. Copy this file to
# .env and modify the values with your actual credentials and settings.
#
# SECURITY WARNING: Never commit actual API keys or passwords to version control!
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL database connection for Chainlit
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Neo4j graph database configuration
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ==============================================================================
# API KEYS CONFIGURATION
# ==============================================================================

# OpenAI API key for LLM operations and embeddings
# Required for LightRAG functionality and GPT models
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Perplexity API key for real-time web search capabilities
# Used for current events and latest research queries
# Get your key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API=pplx-your_perplexity_api_key_here

# Groq API key for fast inference (alternative LLM provider)
# Optional: Used for high-speed model inference
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenRouter API key for access to multiple LLM providers
# Optional: Provides access to various AI models through single API
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your_openrouter_key_here

# ==============================================================================
# CHAINLIT AUTHENTICATION
# ==============================================================================

# Chainlit authentication secret for user session management
# Generate a secure random string for production use
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
CHAINLIT_AUTH_SECRET=your_secure_chainlit_auth_secret_here

# ==============================================================================
# LIGHTRAG INTEGRATION CONFIGURATION
# ==============================================================================

# Enable/disable LightRAG functionality
# Set to "true" to enable LightRAG features, "false" to disable
ENABLE_LIGHTRAG=true

# Working directory for LightRAG storage and indexes
# This directory will contain the knowledge graph database, embeddings, and cache
LIGHTRAG_WORKING_DIR=./lightrag_storage

# Directory containing PDF papers for knowledge base ingestion
# Place your clinical metabolomics research papers here
LIGHTRAG_PAPERS_DIR=./papers

# ==============================================================================
# LIGHTRAG PROCESSING PARAMETERS
# ==============================================================================

# Text chunking configuration for document processing
# Optimal chunk size for biomedical papers (number of tokens)
LIGHTRAG_CHUNK_SIZE=1200

# Token overlap between chunks to maintain context
LIGHTRAG_CHUNK_OVERLAP=100

# Maximum tokens for LLM responses
LIGHTRAG_MAX_TOKENS=8000

# Maximum number of top-k results for retrieval
LIGHTRAG_TOP_K=10

# Entity extraction thoroughness (1-3, higher = more thorough)
LIGHTRAG_ENTITY_GLEANING=2

# ==============================================================================
# EMBEDDING CONFIGURATION
# ==============================================================================

# OpenAI embedding model for semantic similarity
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
LIGHTRAG_EMBEDDING_MODEL=text-embedding-3-small

# Embedding dimension (depends on model choice)
# text-embedding-3-small: 1536, text-embedding-3-large: 3072
LIGHTRAG_EMBEDDING_DIM=1536

# ==============================================================================
# LLM MODEL CONFIGURATION
# ==============================================================================

# Primary LLM model for LightRAG operations
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
LIGHTRAG_LLM_MODEL=gpt-4o-mini

# Temperature for LLM responses (0.0-1.0, lower = more deterministic)
LIGHTRAG_LLM_TEMPERATURE=0.1

# ==============================================================================
# QUERY ROUTING CONFIGURATION
# ==============================================================================

# Enable intelligent query routing between LightRAG and Perplexity
ENABLE_QUERY_ROUTING=true

# Confidence threshold for routing decisions (0.0-1.0)
ROUTING_CONFIDENCE_THRESHOLD=0.7

# Default query mode for LightRAG
# Options: naive, local, global, hybrid
LIGHTRAG_DEFAULT_MODE=hybrid

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Application environment
# Options: development, staging, production
ENVIRONMENT=development

# Logging level for application debugging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed logging for LightRAG operations
LIGHTRAG_VERBOSE_LOGGING=true

# ==============================================================================
# PERFORMANCE AND CACHING
# ==============================================================================

# Enable response caching to improve performance
ENABLE_RESPONSE_CACHE=true

# Cache expiration time in seconds (default: 1 hour)
CACHE_EXPIRATION_SECONDS=3600

# Maximum number of concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT_SECONDS=30

# ==============================================================================
# TRANSLATION SUPPORT
# ==============================================================================

# Enable multi-language support
ENABLE_TRANSLATION=true

# Default language for the application
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated ISO codes)
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar

# ==============================================================================
# MONITORING AND ANALYTICS
# ==============================================================================

# Enable performance monitoring
ENABLE_MONITORING=true

# Enable usage analytics
ENABLE_ANALYTICS=false

# Analytics provider (if enabled)
ANALYTICS_PROVIDER=none

# ==============================================================================
# FILE PROCESSING CONFIGURATION
# ==============================================================================

# Maximum file size for PDF processing (in MB)
MAX_PDF_SIZE_MB=50

# Supported file extensions for document ingestion
SUPPORTED_FILE_EXTENSIONS=pdf,txt,md

# Enable automatic file monitoring for new documents
ENABLE_FILE_MONITORING=false

# File monitoring interval in seconds
FILE_MONITORING_INTERVAL=300

# ==============================================================================
# TESTING AND DEVELOPMENT
# ==============================================================================

# Test question for system validation
LIGHTRAG_TEST_QUESTION="What is clinical metabolomics?"

# Enable test mode (uses mock responses for development)
ENABLE_TEST_MODE=false

# Test data directory
TEST_DATA_DIR=./test_data

# ==============================================================================
# BACKUP AND RECOVERY
# ==============================================================================

# Enable automatic backups of LightRAG storage
ENABLE_AUTO_BACKUP=false

# Backup directory
BACKUP_DIR=./backups

# Backup frequency in hours
BACKUP_FREQUENCY_HOURS=24

# Maximum number of backups to retain
MAX_BACKUPS=7

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# Enable CORS (Cross-Origin Resource Sharing)
ENABLE_CORS=true

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ==============================================================================
# EXPERIMENTAL FEATURES
# ==============================================================================

# Enable experimental features (use with caution in production)
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable advanced entity relationship extraction
ENABLE_ADVANCED_ENTITY_EXTRACTION=false

# Enable semantic search enhancements
ENABLE_SEMANTIC_ENHANCEMENTS=false

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================

# Application host and port
HOST=0.0.0.0
PORT=8000

# Enable SSL/TLS
ENABLE_SSL=false

# SSL certificate paths (if SSL is enabled)
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# ==============================================================================
# SETUP INSTRUCTIONS
# ==============================================================================
#
# 1. Copy this file to .env in the same directory
# 2. Replace all placeholder values with your actual configuration
# 3. Ensure all required API keys are obtained and valid
# 4. Create necessary directories (lightrag_storage, papers, etc.)
# 5. Install dependencies: pip install -r requirements_lightrag.txt
# 6. Test configuration: python -c "from src.main import test_config; test_config()"
#
# For detailed setup instructions, see: LIGHTRAG_SETUP.md
#
# ==============================================================================