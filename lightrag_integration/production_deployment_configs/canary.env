# Canary Deployment Configuration
# Safe canary deployment with 5% traffic to production

PROD_LB_ENABLED=true
PROD_LB_DEPLOYMENT_MODE=canary
PROD_LB_TRAFFIC_PERCENT=5
PROD_LB_PERF_COMPARISON=true
PROD_LB_AUTO_FAILBACK=true
PROD_LB_ADVANCED_ALGORITHMS=false
PROD_LB_COST_OPTIMIZATION=false
PROD_LB_QUALITY_METRICS=true
PROD_LB_ROLLBACK_ERROR_RATE=3.0
PROD_LB_ROLLBACK_LATENCY_MS=3000.0
PROD_LB_CANARY_MAX_HOURS=6

# Conservative health settings for canary
PROD_LB_HEALTH_CHECK_INTERVAL=15
PROD_LB_UNHEALTHY_THRESHOLD=2
PROD_LB_CB_FAILURE_THRESHOLD=3

# Enhanced monitoring for canary
PROD_LB_ENABLE_MONITORING=true
PROD_LB_MONITORING_INTERVAL=30
PROD_LB_ALERT_ERROR_RATE=1.0
PROD_LB_ALERT_LATENCY_MS=2000